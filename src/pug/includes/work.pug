mixin plaza-item(text1,text2,text3,text4,text5)
  .footer-plaza__item.col-md-3
    a.footer-plaza__text1.Text-Style-5(href="#!")=text1
    a.footer-plaza__text1.Text-Style-5(href="#!")=text2
    a.footer-plaza__text1.Text-Style-5(href="#!")=text3
    a.footer-plaza__text1.Text-Style-5(href="#!")=text4
    a.footer-plaza__text1.Text-Style-5(href="#!")=text5 

footer#footer.footer
  .footer__wrapper
    .ibg.bg
      img(src="assets/img/work/footer-bg.png",alt="img")
    .container
      .footer__body.row.no-gutters
        .footer__title.col-6
          h2 Let<span>’</span>s Talk
          .footer__discription.Text-Style We collaborate with ambitious people and brands. Let's chat about what we can do for you.
        .footer__button
          +button-red("Drop us a line")
        .w-100
        .footer__plaza.footer-plaza.col-md-12
          .footer-plaza__body.row.no-gutters.justify-content-between
            .footer-plaza__item.col-md-4.mr-auto
              .footer-plaza__logo
                img(src="assets/img/work/logo-dark.svg",alt="")
              .footer-plaza__text.Text-Style-4 Victor Chmilenko 47, Kropyvnytskyi, 25006
              .footer-plaza__text.Text-Style-4 097 700 3001
              .footer-plaza__text.Text-Style-4 info@splitdev.pro
            +plaza-item("Portfolio","Capabilities","Work process","About us","Contact us") 
            +plaza-item("Dribbble","Behance","Instagram","Facebook","LinkedIn") 


