mixin work-item(name,img,title,text)
  div(class="item col-md-4 row no-gutters " + name)
    .item__img.bg-primary.justify-md-content-center.col-md-2.align-self-center
      img(src=img,alt="img")
    .col-md-10
      .item__title
        h5=title 
      p.item__text.Text-Style-4=text  

section#work.work
  .work__wrapper 
    .work__body.container 
      .row.no-gutters.justify-content-around.justify-md-content-center.bg-success
        +work-item("work__item","assets/img/work/tie.svg","434","Works witn happy customers") 
        +work-item("work__item","assets/img/work/tie.svg","134"," happy customers") 
        +work-item("work__item","assets/img/work/tie.svg","134","Works wiustomers") 
        +work-item("work__item","assets/img/work/tie.svg","144","Works rs") 
        +work-item("work__item","assets/img/work/tie.svg","134","Works witn happy customers") 
        +work-item("work__item","assets/img/work/tie.svg","34","Works witn happy customers") 
        +work-item("work__item","assets/img/work/tie.svg","134","Works wy customers") 
        +work-item("work__item","assets/img/work/tie.svg","139994","Works witn happy customers") 
        +work-item("work__item","assets/img/work/tie.svg","94","Wo happy customers") 
        +work-item("work__item","assets/img/work/tie.svg","134","Works witn happers")


